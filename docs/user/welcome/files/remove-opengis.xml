<?xml version="1.0" encoding="utf-8"?>
<project name="remove-opengis" default="update" basedir=".">
    
    <target name="update"
        description="Update Java project replacing references to org.opengis package">
        
        <!-- bulk repalce * imports, may require more than one * import -->
        <replace dir="." summary="yes">
          <include name="**/*.java"/>
          <replacefilter>
            <replacetoken>import org.opengis.annotation.*;</replacetoken>
            <replacevalue>// documentation annotations no-longer available</replacevalue>
          </replacefilter>
        </replace>
        
        <replace dir="." summary="yes">
          <include name="**/*.java"/>
          <replacefilter>
            <replacetoken>import org.opengis.</replacetoken>
            <replacevalue>import org.geotools.api.</replacevalue>
          </replacefilter>
        </replace>
        
        
